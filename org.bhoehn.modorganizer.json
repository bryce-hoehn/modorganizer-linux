{
  "id": "org.bhoehn.modorganizer",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.10",
  "sdk": "org.kde.Sdk",
  "base": "io.qt.PySide.BaseApp",
  "base-version": "6.10",
  "command": "modorganizer",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "modules": [
    {
      "name": "modorganizer",
      "buildsystem": "simple",
      "build-options": {
        "build-args": ["--share=network"]
      },
      "build-commands": ["pip3 install --no-build-isolation --prefix=/app ."],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
